{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "^15.5.1"
  },
  "scripts": {
    "p:migrate": "prisma migrate dev",
    "p:seed": "prisma db seed --preview-feature",
    "p:init": "npm run p:migrate && npm run p:seed",
    "gen:prisma": "prisma generate",
    "gen:nexus": "ts-node -T api/schema",
    "prebuild": "npm run gen:prisma && npm run gen:nexus",
    "test": "echo \"{test}\"",
    "build": "rimraf dist && tsc",
    "watch:change": "tsc -w",
    "watch:build": "tsc && nodemon dist/api/index.js",
    "dev": "concurrently \"npm:watch:build\" \"npm:watch:change\"",
    "dev:ts": "tsnd --transpile-only api/index.ts",
    "start": "node dist/api/index.js",
    "ts-node": "ts-node --compiler-options {\\\"module\\\":\\\"commonjs\\\"}"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@prisma/client": "2.25.0",
    "apollo-server-core": "^3.0.1",
    "apollo-server-koa": "^3.0.1",
    "bcrypt": "^5.0.1",
    "cookies": "^0.8.0",
    "dotenv": "^10.0.0",
    "esm": "^3.2.25",
    "faker": "^5.5.3",
    "graphql": "^15.5.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^6.0.10",
    "graphql-shield": "^7.5.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "nanoid": "^3.1.23",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.29.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/faker": "^5.5.7",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.7",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "concurrently": "^6.2.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "prisma": "2.25.0",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
